<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFAF2C"
    tools:context=".UploadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="SVP Entrer les informations de votre Vehicule"
        android:textColor="#ff0000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"

        android:id="@+id/inputNomV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_car"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:hint="Nom du vehicule"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_below="@id/textView2" />

    <EditText
        android:id="@+id/inputNumV"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_car"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:hint="Numero d'identificaion  du vehicule"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_below="@id/inputNomV" />

        <TextView
            android:id="@+id/inputCarteGrise"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/inputNumV"
            android:text="Veuillez inserer votre Carte Grise"
            />

        <EditText
            android:id="@+id/FileNames"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/inputCarteGrise"
            android:hint="Enter un nom pour le fichier"
            android:autofillHints=""
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/buttonUploadFiless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FileNames"
            android:text="Choisir un pdf"
            android:layout_centerHorizontal="true"/>
        <ProgressBar
            android:id="@+id/progressbarss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/buttonUploadFiless"

            android:visibility="gone" />
        <TextView
            android:id="@+id/textViewStatusss"
            android:layout_below="@id/progressbarss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucun fichier choisit"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/permis"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewStatusss"
            android:text="Veuillez inserer votre permis de conduire"
            />

        <EditText
            android:id="@+id/editTextFileName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/permis"
            android:hint="Enter un nom pour le fichier"
            android:autofillHints=""
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/buttonUploadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextFileName"
            android:text="Choisir un pdf"
            android:layout_centerHorizontal="true"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/buttonUploadFile"

            android:visibility="gone" />
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_below="@id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucun fichier choisit"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/Assurance"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewStatus"
            android:text="Veuillez inserer votre Assurance"
            />

        <EditText
            android:id="@+id/FileName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/Assurance"
            android:hint="Enter un nom pour le fichier"
            android:autofillHints=""
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/buttonUploadFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FileName"
            android:text="Choisir un pdf"
            android:layout_centerHorizontal="true"/>
        <ProgressBar
            android:id="@+id/progressbars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/buttonUploadFiles"

            android:visibility="gone" />
        <TextView
            android:id="@+id/textViewStatuss"
            android:layout_below="@id/progressbars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucun fichier choisit"
            android:textAlignment="center"
            />


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Suivant -->"
        android:layout_marginStart="100dp"
        android:background="#FFFF00"
        android:layout_below="@id/textViewStatuss"
        android:layout_centerHorizontal="true"
         />

    </RelativeLayout>

</ScrollView>