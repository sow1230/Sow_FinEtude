<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EDED"
    tools:context=".ProfileFragment">

   <RelativeLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:background="@color/colorPrimaryDark">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Profil Utilisateur"
               android:textStyle="bold"
               android:textColor="#FFFFFF"
               android:textSize="25dp"
               android:layout_centerHorizontal="true"
               />


       </RelativeLayout>
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:id="@+id/pos"
           android:orientation="horizontal"
           android:layout_marginTop="100dp">
           <ImageView
               android:id="@+id/avatar"
              android:src="@drawable/ic_face"
               android:layout_marginStart="20dp"
               android:background="@color/colorPrimary"
               android:padding="5dp"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:contentDescription="@string/todos" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/inputNoms"
                   android:paddingStart="10dp"
                   android:paddingEnd="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/ic_person"
                   android:layout_marginStart="5dp"
                   android:layout_marginTop="5dp"
                   android:backgroundTint="#D2691E"
                   android:textSize="15sp"
                   android:background="@drawable/input_bg"
                   android:textColor="#FFFF"
                   />
               <TextView
                   android:id="@+id/inputMail"
                   android:paddingStart="10dp"
                   android:paddingEnd="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="5dp"
                   android:layout_marginTop="5dp"
                   android:drawableStart="@drawable/ic_email"
                   android:backgroundTint="#D2691E"
                   android:textSize="15sp"
                   android:textColor="#FFFF"
                   android:background="@drawable/input_bg"
                    />
               <TextView
                   android:id="@+id/inputTel"
                   android:paddingStart="10dp"
                   android:drawableStart="@drawable/ic_phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="5dp"
                   android:paddingEnd="5dp"
                   android:layout_marginTop="5dp"
                   android:textSize="15sp"
                   android:backgroundTint="#D2691E"
                   android:background="@drawable/input_bg"
                   android:textColor="#FFFF"
                   />

           </LinearLayout>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/pos"
           android:layout_marginTop="50dp">
           <TextView
               android:id="@+id/in"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Informations de mon vehicule"
               android:textStyle="bold"
               android:textAlignment="center"
               android:textSize="25sp"
               android:layout_centerHorizontal="true"
               />
           <TextView
               android:id="@+id/Nomv"
               android:layout_marginStart="32dp"
               android:layout_marginEnd="32dp"
               android:layout_marginTop="40dp"
               android:paddingStart="10dp"
               android:paddingEnd="5dp"
               android:paddingBottom="5dp"
               android:paddingTop="5dp"
               android:drawablePadding="10dp"
               android:ems="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:backgroundTint="#D2691E"
               android:textColor="#FFFFFF"
               android:background="@drawable/input_bg"
               android:drawableStart="@drawable/ic_car"
               android:hint="Nom du vehicule "
               android:autofillHints=""
               />
           <TextView
               android:id="@+id/Numv"
               android:layout_marginStart="32dp"
               android:layout_marginEnd="32dp"
               android:layout_marginTop="10dp"
               android:paddingStart="10dp"
               android:paddingEnd="5dp"
               android:paddingBottom="5dp"
               android:paddingTop="5dp"
               android:drawablePadding="10dp"
               android:layout_below="@id/Nomv"
               android:ems="10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:backgroundTint="#D2691E"
               android:textColor="#FFFFFF"
               android:background="@drawable/input_bg"
               android:drawableStart="@drawable/ic_car"
               android:hint="Numero D'identification du  vehicule "
               android:autofillHints=""
               />
           <TextView
               android:id="@+id/ut"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Mes documents"
               android:textStyle="bold"
               android:textAlignment="center"
               android:layout_below="@id/Numv"
               android:textSize="25sp"
               android:layout_centerHorizontal="true"
               />

           <Button
               android:layout_marginTop="20dp"
               android:layout_below="@id/ut"
               android:id="@+id/listView"
               android:text="Voir mes Documents "
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="NestedScrolling" />

           <Button
               android:id="@+id/edit"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:background="@drawable/ic_edit"
               android:layout_below="@id/Numv"
               android:backgroundTint="@color/colorPrimary"
               android:layout_marginTop="250dp"
               android:layout_marginStart="350dp"/>

       </RelativeLayout>
     </RelativeLayout>

</ScrollView>