<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre demande d'inscription a bien été envoyé aux Services d'Etat"
        android:textStyle="bold"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"

        />
    <Button
        android:id="@+id/VerifierEmail"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Envoyer une demande de validation"
        android:textSize="15sp"
        android:background="@drawable/btn_up"
        android:layout_below="@id/w"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/VerifierEmail"
        android:layout_marginTop="40dp"
        android:layout_centerVertical="true"
        android:text="Votre adresse email doit etre valider par le Service d'Etat, pour pouvoir vous connecter !!"
        android:textColor="#ff0000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        />

</RelativeLayout>